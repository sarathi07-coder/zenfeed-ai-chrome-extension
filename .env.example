# ZenFeed Environment Variables
# Copy this file to .env and fill in your API keys

# LLM Provider (gemini, openai, anthropic)
LLM_PROVIDER=gemini

# Google Gemini API Key
GEMINI_API_KEY=your_gemini_api_key_here
# Alternative: GOOGLE_API_KEY=your_google_api_key_here

# OpenAI API Key (fallback)
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic API Key (fallback)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# YouTube Data API Key
YOUTUBE_API_KEY=your_youtube_api_key_here
# Alternative: YT_API_KEY=your_youtube_api_key_here

# Backend Configuration
BACKEND_URL=http://localhost:8000
BACKEND_PORT=8000

# Database (optional - for production)
DATABASE_URL=sqlite:///./zenfeed.db
# For production: postgresql://user:password@localhost/zenfeed

# Redis (optional - for session caching)
REDIS_URL=redis://localhost:6379/0

# Google Cloud (for deployment)
GOOGLE_CLOUD_PROJECT=your-project-id
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account-key.json

# Logging
LOG_LEVEL=INFO

# CORS (for production, specify exact origins)
CORS_ORIGINS=*

# Feature Flags
ENABLE_BACKEND_ANALYSIS=false
ENABLE_YOUTUBE_API=true
ENABLE_CACHING=true
